<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPeopleApp.Views.PersonListPage"
             Title="People">

    <RefreshView IsRefreshing="{Binding IsBusy}" Command="{Binding LoadPeopleCommand}">
        <CollectionView x:Name="PeopleCollection"
                        ItemsSource="{Binding People}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnDefinitions="60,*,Auto" RowDefinitions="Auto,Auto">
                        <Image Source="{Binding Avatar}" WidthRequest="48" HeightRequest="48" Aspect="AspectFill" 
                               VerticalOptions="Center" HorizontalOptions="Center">
                            <Image.Clip>
                                <EllipseGeometry Center="24,24" RadiusX="24" RadiusY="24"/>
                            </Image.Clip>
                        </Image>
                        <Label Grid.Column="1" Text="{Binding FullName}" FontAttributes="Bold" />
                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding Email}" Opacity="0.7" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
