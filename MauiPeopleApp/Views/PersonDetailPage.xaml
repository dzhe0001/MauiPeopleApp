<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPeopleApp.Views.PersonDetailPage"
             Title="{Binding Person.FullName}">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Image Source="{Binding Person.Avatar}" WidthRequest="160" HeightRequest="160" Aspect="AspectFill">
                <Image.Clip>
                    <EllipseGeometry Center="80,80" RadiusX="80" RadiusY="80"/>
                </Image.Clip>
            </Image>
            <Label Text="{Binding Person.FullName}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Person.Email}" />
            <Label Text="User ID:" Opacity="0.6" />
            <Label Text="{Binding Person.Id}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
