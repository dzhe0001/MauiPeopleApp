<?xml version="1.0" encoding="UTF-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiPeopleApp.Views"
    x:Class="MauiPeopleApp.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="People">
            <ShellContent Title="Login" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
            <ShellContent Title="People" ContentTemplate="{DataTemplate views:PersonListPage}" />
        </Tab>
    </TabBar>
</Shell>
